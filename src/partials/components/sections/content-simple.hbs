{{#extend "section"}}
    {{#content "content"}}

      <div class="content-simple">
        <h2 class="content-simple__title title-h2">
            Области НИИР
        </h2>
        <div class="content-simple__sliders">
            <div class="content-simple__top-swiper swiper loading">
                <ul class="swiper-wrapper">
                    {{#each contentSimple.tabsButtons}}
                    <li class="content-simple__top-swiper-slide swiper-slide">
                        <div class="content-simple__top-swiper-item">
                            {{this.name}}
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="content-simple__footer-swiper
            swiper loading">
                <ul class="swiper-wrapper">
                    {{#each contentSimple.swiperContent}}
                    <li class="content-simple__footer-swiper-slide swiper-slide">
                        <div class="content-simple__footer-swiper-box">
                            <h3>
                                {{this.title}}
                            </h3>
                            <p>
                                {{this.text}}
                            </p>
                        </div>
                        <div class="content-simple__footer-swiper-img-box">
                            <img class="content-simple__footer-swiper-img" src={{this.imgUrl}} alt={{this.imgAlt}}>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
      </div>

    {{/content}}
{{/extend}}